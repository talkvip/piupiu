{
  "manifest_version": 2,

  "name": "piupiu",
  "description": "Send text, pictures or links using sound waves! (Chirp compatible)",
  "version": "0.7",

	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png",
		"256": "icon_256.png",
		"512": "icon_512.png"
	},

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "piupiu - Share with sound!"
  },
  
  "permissions": [
    "activeTab",
    "https://piupiuml.alwaysdata.net",
    "https://is.gd",
    "https://lut.im",
    "storage",
    "contextMenus"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
	"content_security_policy": 
		"script-src 'self' https://piupiuml.alwaysdata.net https://is.gd https://lut.im; object-src 'self'"
}